<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.TradeSimulation.tradesimulation">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TradeSimulation">

        <activity android:name=".Page.LoadingPage.LoadingPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Page.SearchPage.SearchPageActivity"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".Page.FirstPage.FirstPageActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Page.TradingPage.TradingActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Page.ThirdPage.ThirdActivity"/>
        <activity android:name=".Page.FourthPage.FourthPageActivity"/>

        <activity android:name=".Page.FourthPage.Fragment.SettingPageAnnouncement"/>
        <activity android:name=".Page.FourthPage.Fragment.SettingPageDonation"/>
        <activity android:name=".Page.FourthPage.Fragment.SettingPageLanguageSetting"/>
        <activity android:name=".Page.FourthPage.Fragment.SettingPageUserInfo"/>
        <activity android:name=".Page.FourthPage.Fragment.SettingPagePayment"/>

        <activity android:name=".Page.Login.LoginPage"/>
        <activity android:name=".Page.Login.SignUpPage"/>

    </application>

</manifest>